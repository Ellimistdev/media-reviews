<h1>Add a Season!</h1>
<%= render 'notice' %>
<%= form_for @season do |f| %>
  <%= f.hidden_field :series_id, value: params[:series_id] %><br>
  <%= f.label :number, 'Season Number:' %><br>
  <%= f.text_field :number %><br>
  <%= f.fields_for :episodes do |ep| %>
    <%= ep.label :title, 'Add an episode title!' %><br>
    <%= ep.text_field :title %><br>
  <% end %>
  <%= f.submit %>
<% end %>
